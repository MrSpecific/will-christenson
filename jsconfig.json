{
  "compilerOptions": {
    "module": "es6",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./components/*"],
      "@layout": ["./components/layout/"],
      "@svg/*": ["./components/svg/*"],
      "@content/*": ["./content/*"],
      "@images/*": ["./content/images/*"],
      "@lib/*": ["./lib/*"],
      "@pages/*": ["./pages/*"],
      "@public/*": ["./public/*"],
      "@styles/*": ["./styles/*"],
      "@utils/*": ["./utils/*"],
      "@hooks": ["./utils/hooks/"],
      "@hooks/*": ["./utils/hooks/*"]
    }
  },
  "exclude": ["node_modules"]
}
